generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model admin {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  email       String   @unique
  github      String
  linkedin    String
  password    String
  skills      String[]
  title       String
  twitter     String
  username    String
}

model Work {
  id          Int      @id @map("_id")
  description String
  github      String
  likes       Int
  techno      String[]
  title       String
  website     String
  createAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("works")
}
